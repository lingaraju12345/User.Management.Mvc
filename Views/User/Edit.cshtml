<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Customer</title>

    <style type="text/css">
        .card {
            width: 60%;
            margin-left: 20%;
            margin-top: 5%
        }
    </style>
    <link rel="stylesheet" href="~/css/EditStyleSheet.css" />
</head>
<body>

    <div class="card">
        <div class="card-header">
            <center><h2>Edit User</h2></center>
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Existing Email</label>
                        <input disabled="disabled" value="@ViewData["editgemail"]" class="form-control" id="txtgemail" />
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" id="txtname" />
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" id="txtemail" />
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Role</label>
                        <select class="form-control" id="txtrole">
                            <option value="Select-Role">Select Role</option>
                            <option value="Admin">Admin</option>
                            <option value="Users">User</option>
                        </select>
                    </div>
                </div>

                @* <div class="col-lg-12">
                    <div class="form-group">
                        <label>User Role</label>
                        <input class="form-control" id="txtrole" />
                    </div>
                </div> *@

            </div>
        </div>
        <div class="card-footer">
            <center>
            <a onclick="SaveUser()" class="btn btn-primary">Save</a>
            <a asp-controller="User" asp-action="Index" class="btn btn-danger">Back</a>
            </center>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var codes = $('#txtgemail').val();

            if (codes != '' && codes != null) {
                $.ajax({
                    type: 'GET',
                    url: 'https://localhost:7010/api/Authentication/GetUserByEmail?email=' + codes,
                    // contentType: "application/json; charset=utf-8",
                    // dataType: "json",
                    async: false,
                    success: function (data) {
                        if (data != null) {
                            $('#txtname').val(data.name);
                            $('#txtemail').val(data.email);
                            $('#txtrole').val(data.role);
                        }
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });
            }
        });

        function SaveUser() {
            var isproceed = true;

            var _user = $('#txtname');
            var _email = $('#txtemail');
            var _role = $('#txtrole');



                var user = _user.val();
                var email = _email.val();
                
                var role = _role.val();

                if (user == null || user == '') {
                    _user.css('border-color', 'red');
                    isproceed = false;
                } else {
                    _user.css('border-color', '#ccc');
                }
                if (email == null || email == '') {
                    _email.css('border-color', 'red');
                    isproceed = false;
                } else {
                    _email.css('border-color', '#ccc');
                }
                
                if (role == null || role == '') {
                    _role.css('border-color', 'red');
                    isproceed = false;
                } else {
                    _role.css('border-color', '#ccc');
                }
                if (isproceed) {

                    var _obj = new Object();

                    _obj.Username = user;
                    _obj.Email = email;
                    _obj.Role = role;


                    $.ajax({
                        type: 'PUT',
                    url: 'https://localhost:7010/api/Authentication/EditUser',
                        data: JSON.stringify(_obj),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        async: false,
                        success: function (data) {
                            if (data != null) {
                                localStorage.setItem('token', data.token);
                                window.location.href = '/User/Index'
                                alert('User Edited Successfully.')
                            }
                        },
                        failure: function (error) {
                            alert('Failed to edit User')
                        }
                    })

                }

            
        }
    </script>

</body>
</html>