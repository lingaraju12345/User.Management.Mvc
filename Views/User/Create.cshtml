﻿<style type="text/css">
     .card {
         width: 60%;
         margin-left: 20%;
         margin-top: 5%
     }
</style>
<link rel="stylesheet" href="~/css/UserCraeteStyleSheet.css" />

<div class="card">
    <div class="card-header">
        <center><h2>User Login</h2></center>
    </div>
    <div class="card-body">

        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Username</label>
                    <input class="form-control" id="txtusername" />
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Email</label>
                    <input class="form-control" id="txtemail" />
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Password</label>
                    <input class="form-control" id="txtpass" />
                </div>
            </div>

            <div class="col-lg-12">
                <div class="form-group">
                    <label>Role</label>
                    <select class="form-control" id="txtrole">
                        <option value="Select-Role">Select Role</option>
                        <option value="Admin">Admin</option>
                        <option value="Users">User</option>
                    </select>
                </div>
            </div>

        </div>
    </div>
    <div class="card-footer">
        <center>
            <a onclick="create()" class="btn btn-primary">Add</a>
            <a asp-controller="User" asp-action="Index" class="btn btn-danger">Back</a>
        </center>
    </div>


</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">

    var js = jQuery.noConflict(true);


    function create() {

        var isproceed = true;

        var _user = $('#txtusername');
        var _email = $('#txtemail');
        var _pwd = $('#txtpass');
        var _role = $('#txtrole');



        var user = _user.val();
        var email = _email.val();
        var pwd = _pwd.val();
        var role = _role.val();

        if (user == null || user == '') {
            _user.css('border-color', 'red');
            isproceed = false;
        } else {
            _user.css('border-color', '#ccc');
        }
        if (email == null || email == '') {
            _email.css('border-color', 'red');
            isproceed = false;
        } else {
            _email.css('border-color', '#ccc');
        }
        if (pwd == null || pwd == '') {
            _pwd.css('border-color', 'red');
            isproceed = false;
        } else {
            _pwd.css('border-color', '#ccc');
        }
        if (role == null || role == '') {
            _role.css('border-color', 'red');
            isproceed = false;
        } else {
            _role.css('border-color', '#ccc');
        }
        if (isproceed) {

            var _obj = new Object();

            _obj.Username = user;
            _obj.Email = email;
            _obj.Password = pwd;
            _obj.Role = role;


            $.ajax({
                type: 'POST',
                url: 'https://localhost:7010/api/Authentication',
                data: JSON.stringify(_obj),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                async: false,
                success: function (data) {
                    if (data != null) {
                        localStorage.setItem('token', data.token);
                        window.location.href = '/User/Index'
                        alert('User Added Successfully.')
                    }
                },
                failure: function (error) {
                    alert('Failed to create User')
                }
            })

        }


    }
</script>